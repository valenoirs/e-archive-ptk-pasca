      <h1
        class="display-6 text-success"
        style="font-family: 'Times New Roman', Times, serif"
      >
        E-Arsip
      </h1>
      <h5 class="text-muted">PTK PPs UNIMA</h5>
      <br />
      <form method="post" action="/user">
        <div class="mb-3">
          <label
            for="exampleInputEmail1"
            class="form-label"
            data-aos="fade-down"
            data-aos-duration="1000"
            >Email address</label
          >
          <input
            type="email"
            name="email"
            placeholder="alamat@email.com"
            class="form-control"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            data-aos="fade-down"
            data-aos-duration="1000"
            autocomplete="off"
          />
        </div>
        <div class="mb-3">
          <label
            for="exampleInputPassword1"
            class="form-label"
            data-aos="fade-down"
            data-aos-duration="1000"
            >Password</label
          >
          <input
            type="password"
            name="password"
            placeholder="********"
            class="form-control"
            id="exampleInputPassword1"
            data-aos="fade-down"
            data-aos-duration="1000"
          />
        </div>
        <br />
        <button
          type="submit"
          class="btn btn-success"
          data-aos="fade-down"
          data-aos-duration="1000"
        >
          <i class="bi bi-box-arrow-in-right"></i> Masuk
        </button>
      </form>
    </div>
  </div>
</div>
